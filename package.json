    "nodemon": "^3.1.9",
    "prettier": "^2.8.7",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YushiYamamoto/code-dungeon-mini.git"
  },
  "bugs": {
    "url": "https://github.com/YushiYamamoto/code-dungeon-mini/issues"
  },
  "homepage": "https://github.com/YushiYamamoto/code-dungeon-mini#readme",
  "keywords": [
    "game",
    "browser-game",
    "payment",
    "javascript",
    "paypay",
    "line-pay",
    "rakuten-pay",
    "canvas",
    "roguelike"
  ],
